
<div class="container">
	<div class="jumbotron">
		<h1>create question</h1>
	</div>
</div>

<form action="/question/create" method="POST">

	<p>
	idd : <input type="int" name="idd" id="idd" readonly="true" required="true">
	</p>

	<br/><input type="text" name="question" placeholder="your question" required="true">

	<input type="submit" value="create question" onclick="update()">
</form>

<script>

	onload = function setUp() {
		var apiContent = new XMLHttpRequest();
		apiContent.open("GET", 'http://localhost:1337/data/579f314bf21ccb251ac1a0f7', false);
		apiContent.send(null);

		var r = JSON.parse(apiContent.response);
		document.getElementById('idd').value = parseInt(r.nbQuestion) +1;
	};

	function update(){
		var iddValeur = document.getElementById("idd").value;
		var requete = 'http://localhost:1337/data/update/579f314bf21ccb251ac1a0f7?nbQuestion=' + iddValeur;

		var apiActu = new XMLHttpRequest();
		apiActu.open("GET", requete, false);
		apiActu.send(null);
	};
</script>